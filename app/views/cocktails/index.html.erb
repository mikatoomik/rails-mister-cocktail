<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/featured/?cocktail)">
  My Cocktails
</div>
<div class="container">
  <div class="row p-2 m-2">
    <% @cocktails.each do |cocktail| %>
    <div class="col-12 col-lg-4 p-2">
      <div class="card-product">
        <%= cl_image_tag cocktail.photo, crop: :fill %>
        <div class="card-product-infos">
          <h2><%= cocktail.name %></h2>
          <p><%= link_to "make me...", cocktail_path(cocktail) %></p>
          <p>
          <%= link_to cocktail_path(cocktail),method: 'DELETE', class: "delete-link hidden" do %>
          <button class="btn btn-tag">X</button>
          <% end %>
          </p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

<div class="row p-2 m-2">
<div class="card-trip col-12 col-lg-4">
  <div class="card-trip-infos">
    <div>
      <h2>Add Cocktail</h2>
      <p>
            <%= simple_form_for(@cocktail_new) do |f| %>
              <%= f.input :name %>
              <%= f.input :photo %>
              <%= f.input :photo_cache, as: :hidden %>
              <%= f.submit "Add a new Cocktail", class: "btn btn-primary" %>
              <% end %>
          </p>
    </div>
  </div>
</div>
</div>
