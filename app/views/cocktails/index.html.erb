<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/featured/?cocktail)">
  My Cocktails
</div>
  <div id="search_form">
  <%= simple_form_for :search, url: cocktails_path, method: :get do |f| %>
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="search[query]" id="search_query" />
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
<% end %>
</div>
<div class="container">
  <div class="row p-2 m-2">
    <% @cocktails.each do |cocktail| %>
    <div class="col-12 col-lg-4 p-2">
      <div class="card-product">
        <%= link_to cocktail_path(cocktail) do %>
          <%= cl_image_tag cocktail.photo, crop: :fill %>
          <div class="card-product-infos">
          <h2><%= cocktail.name %></h2>
          <p>
          <%= link_to cocktail_path(cocktail),method: 'DELETE', data: {confirm: "Are you sure?"}, class: "delete-link hidden" do %>
          <button id="delete-btn" class="btn btn-tag"><i class="far fa-times-circle"></i></button>
          <% end %>
          </p>
        </div>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>

<div class="row p-2 m-2">
<div class="card-trip col-12 col-lg-4">
  <div class="card-trip-infos">
    <div>
      <h2>Add Cocktail</h2>
      <p>
            <%= simple_form_for(@cocktail_new) do |f| %>
              <%= f.input :name %>
              <%= f.input :photo %>
              <%= f.input :photo_cache, as: :hidden %>
              <%= f.submit "Add a new Cocktail", class: "btn btn-primary" %>
              <% end %>
          </p>
    </div>
  </div>
</div>
</div>
